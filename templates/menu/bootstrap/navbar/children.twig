<li class="dropdown">
	{% if item.is_current() %}
		<a href="#" class="active dropdown-toggle" data-toggle="dropdown">{{ item.label() }} <b class="caret"></b></a>
	{% else %}
		<a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ item.label() }} <b class="caret"></b></a>
	{% endif %}
	<ul class="dropdown-menu">
		{% for children in item.children() %}
			{% if children.is_devider() %}
				<li class="divider"></li>
			{% elseif children.is_header() %}
				<li class="nav-header">{{ children.label() }}</li>
			{% else %}
				{% if children.is_current() %}
					<li class="active"><a href="{{ children.url() }}"{% if children.target()|length > 0 %} target=" {{ children.target() }}"{% endif %}>{{ children.label() }}</a></li>
				{% else %}
					<li><a href="{{ children.url() }}">{{ children.label() }}</a></li>
				{% endif %}
			{% endif %}
		{% endfor %}
	</ul>
</li>
